using System;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int x = Convert.ToInt32(Console.ReadLine());
            int GhadrMotlagh = Math.Abs(x);
            double Radical = Math.Sqrt(GhadrMotlagh);
            double Result_1 = GhadrMotlagh + Radical;
            double Result_2 = Math.Sqrt(GhadrMotlagh + Math.Sqrt(Result_1));
            Console.WriteLine(Result_2);
            Console.ReadKey();
        }
    }
}
